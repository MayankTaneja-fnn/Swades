{
  "$schema": "https://turbo.build/schema.json",
  "tasks": {
    "build": {
      "dependsOn": ["^build"],
      "outputs": ["dist/**", ".next/**", "!.next/cache/**"],
      "env": ["DATABASE_URL", "OPENAI_API_KEY", "GROQ_API_KEY", "VITE_API_URL"]
    },
    "dev": {
      "cache": false,
      "persistent": true,
      "env": ["DATABASE_URL", "OPENAI_API_KEY", "GROQ_API_KEY", "VITE_API_URL"]
    },
    "lint": {}
  }
}
